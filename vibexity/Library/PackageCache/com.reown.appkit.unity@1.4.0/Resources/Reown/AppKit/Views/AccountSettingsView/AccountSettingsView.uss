.modal--landscape AccountSettingsView {
    flex-direction: row;
    justify-content: center;
}

#account-settings-view__profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 12px;
    margin-top: -12px;
    min-width: 200px;
}

#account-settings-view__profile-avatar {
    width: 75px;
    height: 75px;
    border-radius: 100%;
    border-width: 8px;
    border-color: var(--ro-gray-glass-005);
    overflow: hidden;
    align-items: center;
}

#account-settings-view__profile-avatar-image {
    width: 110%;
    height: 110%;
}

#account-settings-view__profile-address {
    margin-top: 10px;
    margin-left: 22px;
    padding: 0;
    -unity-text-align: middle-center;
    color: var(--ro-color-fg-100);
    font-size: var(--ro-font-size-medium-title);
}

#account-settings-view__profile-balance-container {
    flex-direction: row;
}

#account-settings-view__profile-balance-container > Label {
    margin-top: 2px;
    padding: 0;
    -unity-text-align: middle-center;
    color: var(--ro-color-fg-200);
    font-size: var(--ro-font-size-paragraph);
}

#account-explorer-button-container {
    margin-top: 12px;
}

#account-settings-view__profile-address-container {
    display: flex;
    flex-direction: row;
}

#account-settings-view__explorer-button-text {
    margin: 0 6 0 6px;
    padding: 0;
    -unity-text-align: middle-center;
}

#account-settings-view__explorer-button-icon-left {
    --unity-image: resource('Reown/AppKit/Icons/icon_medium_compass');
}

#account-settings-view__explorer-button-icon-right {
    width: 8px;
    height: 8px;
    --unity-image: resource('Reown/AppKit/Icons/icon_bold_externallink');
}

#account-settings-view__profile-address-copy-link-container {
    justify-content: flex-end;
}

#account-settings-view__buttons {
    width: 100%;
}

.modal--landscape #account-settings-view__buttons {
    padding-left: 32px;
    max-width: 400px;
}